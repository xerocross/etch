<section class="pad">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{name: 'loginForm',class:'narrow-form'}) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>

<div>
    <span ng-controller="encryptionKeySetter">
        <label for = "key" class='sr-only'>Key</label><br>
          <input class="form-control" type="text" name="key" ng-model="newKey" placeholder={{keyStatus}}>
        
        <p class="text-info">only set key if changing it</p>
        <span class="btn-group" ng-show="loginForm.key.$dirty">
            <!--   -->
            <button type="button" class="btn btn-default" id="setKey" ng-click="update(); loginForm.key.$setPristine()">set key</button>
        </span>
        
    </span>
</div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-lg btn-default btn-block action' %>
  </div>


<% end %>
</section>



