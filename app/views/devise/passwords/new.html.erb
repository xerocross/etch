<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class:'narrow-form'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email,class:'sr-only' %><br />
    <%= f.email_field :email, autofocus: true,class:'form-control',placeholder:'email' %>
  </div>

  <div class="actions">
    <%= f.submit "email reset instructions",class:'btn btn-lg btn-default btn-block action' %>
  </div>
<% end %>

