%nav
  %h2{style:'display:inline-block'}
    -if !@back.nil?
      =link_to @back, nil do
        %span{class:'glyphicon glyphicon-chevron-left'}
    = title(controller.controller_name, controller.action_name).html_safe
  %ul{class:'nav nav-pills pull-right'}
    %li
      = link_to account_new_path, nil do
        sign up
    %li
      = link_to account_log_in_path, nil do
        log in
    -if lookup_context.find_all("#{controller.controller_name}/_#{controller.action_name}_context_menu").any?
      %li.dropdown{style:''}
        %a{class:"dropdown-toggle", id:"dropdownMenu2", 'data-toggle'=>"dropdown", 'aria-haspopup'=>"true", 'aria-expanded'=>"true"}
          %span{class:'glyphicon glyphicon-option-vertical'}
        %ul{class:"dropdown-menu pull-right", 'aria-labelledby'=>"dropdownMenu2"}
          = render partial: "#{controller.controller_name}/#{controller.action_name}_context_menu"